{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "pngcompress",
    "version": "1.0.4",
    "identifier": "com.pngcompress.app",
    "build": {
        "beforeDevCommand": "npm run dev:frontend",
        "beforeBuildCommand": "npm run build:frontend",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "PNG Compress",
                "width": 800,
                "height": 600,
                "dragDropEnabled": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}