{
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "shell:allow-open",
        "dialog:default",
        "dialog:allow-open",
        "fs:default",
        "fs:allow-read",
        "fs:allow-write",
        "fs:allow-exists",
        {
            "identifier": "fs:scope",
            "allow": [
                "**"
            ]
        }
    ]
}